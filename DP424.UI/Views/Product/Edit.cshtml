@using DP424.Domain.Prototype
@model ProductPostDto

<h2>Edit Product</h2>

<form asp-action="Edit" asp-controller="Product" method="post" enctype="multipart/form-data" class="form">
    <input type="hidden" asp-for="Id" />
    <div>
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>

    <div>
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
        <span asp-validation-for="Description"></span>
    </div>

    <div>
        <label asp-for="Price"></label>
        <input class="form-control" asp-for="Price" type="number" step="0.01" />
        <span asp-validation-for="Price"></span>
    </div>

    <div>
        <label asp-for="Category"></label>
        <input class="form-control" asp-for="Category" />
        <span asp-validation-for="Category"></span>
    </div>

    <div>
        <label>Image</label>
        <input class="form-control" type="file"  name="Image" />
    </div>

    <button class="btn btn-primary mt-3" type="submit">Save</button>
    <a class="btn btn-success mt-3" asp-action="Index">Back to List</a>

</form>

