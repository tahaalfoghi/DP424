@model IEnumerable<DP424.Domain.Models.Product>

<h1>Product List</h1>


<a asp-action="Create" class="btn btn-primary">Add Product</a>

<table class="table text-nowrap mb-0 align-middle">
    <thead class="text-dark fs-4">
        <tr>
            <th class="border-bottom-0">
                <h6 class="fw-semibold mb-0">#</h6>
            </th>
            <th class="border-bottom-0">
                <h6 class="fw-semibold mb-0">Name</h6>
            </th>
            <th class="border-bottom-0">
                <h6 class="fw-semibold mb-0">Price</h6>
            </th>
            <th class="border-bottom-0">
                <h6 class="fw-semibold mb-0">Category</h6>
            </th>
            <th class="border-bottom-0">
                <h6 class="fw-semibold mb-0">Description</h6>
            </th>
            <th class="border-bottom-0">
                <h6 class="fw-semibold mb-0">Actions</h6>
            </th>
        </tr>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td class="border-bottom-0">
                    <img src="@(item.Image.StartsWith('/') ? $"https://localhost:7083{item.Image}" : item.Image)"
                         alt="@item.Name" style="width:150px; height:150px" />
                </td>
                <td class="border-bottom-0">
                    <h6 class="fw-semibold mb-1">@item.Name</h6>
                </td>
                <td class="border-bottom-0">
                    <p class="mb-0 fw-normal">@item.Price.ToString("C")</p>
                </td>
                <td class="border-bottom-0">
                    <div class="d-flex align-items-center gap-2">
                        <span class="badge bg-primary rounded-3 fw-semibold">@item.Category</span>
                    </div>
                </td>
                <td class="border-bottom-0">
                    <p class="mb-0 fs-4">@item.Description</p>
                </td>
                <td class="border-bottom-0">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"><i class="bi bi-pencil-square"></i>Edit</a>
                    <form asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this record?');">
                            <i class="bi bi-trash">Delete</i>
                        </button>
                    </form>
                </td>
            </tr>
        }
        
    </tbody>
</table>
